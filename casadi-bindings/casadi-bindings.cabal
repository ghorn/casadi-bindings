author:              Greg Horn
maintainer:          gregmainland@gmail.com
copyright:           (c) Greg Horn 2013-2015
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Casadi.CMatrix
                       Casadi.Callback
                       Casadi.DMatrix
                       Casadi.Function
                       Casadi.GenericC
                       Casadi.IOScheme
                       Casadi.MX
                       Casadi.MXFunction
                       Casadi.Option
                       Casadi.Overloading
                       Casadi.Slice
                       Casadi.Sparsity
                       Casadi.SX
                       Casadi.SXFunction
                       Casadi.Viewable
  other-modules:       Casadi.SharedObject
  build-depends:       base >=4.6 && <5,
                       linear,
                       vector,
                       containers,
                       cereal,
                       binary,
                       vector-binary-instances,
                       casadi-bindings-internal == 0.1.3.1,
                       casadi-bindings-core     == 2.4.1.0
  default-language:    Haskell2010

  C-sources:           cbits/handwritten.cpp
  extra-libraries:     stdc++
  pkgconfig-depends:   casadi
  cc-options: -Wall -Wno-sign-compare

source-repository head
  type: git
  location: git://github.com/ghorn/casadi-bindings.git
